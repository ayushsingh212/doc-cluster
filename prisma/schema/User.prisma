model User {
  id              String   @id @default(uuid())

  email           String   @unique @db.VarChar(100)
  fullName        String?  @db.VarChar(50)
  phoneNumber     String?  @db.VarChar(15)
  isVerified Boolean  @default(false)

  avatarUrl       String?  @db.VarChar(300)
  avatarId        String?  @db.VarChar(200)

  coverInfo       Json?
  DOB             DateTime?
  bio             String?  @db.VarChar(250)

  username        String   @unique @db.VarChar(30)
  password        String   @db.VarChar(200)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@check(email <> '' AND length(email) >= 5 AND length(email) <= 100)
  @@check(length(username) >= 3 AND length(username) <= 30)
  @@check(fullName IS NULL OR length(fullName) >= 2)
  @@check(phoneNumber IS NULL OR length(phoneNumber) >= 10)
  @@check(bio IS NULL OR length(bio) <= 250)
}
